datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Feedback {
  candidate    Candidate? @relation(fields: [candidateId], references: [id])
  candidateId  String?
  comments     String?
  createdAt    DateTime   @default(now())
  feedbackDate DateTime?
  id           String     @id @default(cuid())
  interviewer  String?
  rating       Int?
  updatedAt    DateTime   @updatedAt
}

model Resume {
  candidate   Candidate? @relation(fields: [candidateId], references: [id])
  candidateId String?
  createdAt   DateTime   @default(now())
  education   String?
  email       String?
  experience  String?
  id          String     @id @default(cuid())
  name        String?
  phone       String?
  skills      String?
  updatedAt   DateTime   @updatedAt
  uploadDate  DateTime?
}

model Candidate {
  createdAt  DateTime             @default(now())
  email      String?
  feedbacks  Feedback[]
  firstName  String?
  id         String               @id @default(cuid())
  interviews Interview[]
  lastName   String?
  phone      String?
  resumes    Resume[]
  status     EnumCandidateStatus?
  updatedAt  DateTime             @updatedAt
}

model Interview {
  candidate     Candidate?                  @relation(fields: [candidateId], references: [id])
  candidateId   String?
  comments      String?
  createdAt     DateTime                    @default(now())
  id            String                      @id @default(cuid())
  interviewDate DateTime?
  interviewer   String?
  interviewType EnumInterviewInterviewType?
  updatedAt     DateTime                    @updatedAt
}

enum EnumCandidateStatus {
  Option1
}

enum EnumInterviewInterviewType {
  Option1
}
